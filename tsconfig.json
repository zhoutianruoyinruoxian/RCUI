{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowUnreachableCode": true,
    "allowJs": true,
    "outDir": "/", // 解决tsconfig.json文件报错无法写入文件的问题
    "baseUrl": ".",
    "locale": "zh-cn",
    "paths": {
      "_data": [
        "./_data"
      ],
      "rcui": [
        "./components"
      ],
      "utils": [
        "./site/utils"
      ],
      "layout": [
        "./site/layout"
      ],
      "pages": [
        "./site/pages"
      ],
      "hooks": [
        "./site/hooks"
      ],
      "public": [
        "./public"
      ]
    },
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },
  "include": [
    "components/**/*",
    "site/**/*"
  ],
  "exclude": [
    "node_modules",
    "_data"
  ]
}